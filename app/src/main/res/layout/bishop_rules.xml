<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rules_bishop"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="16dp"/>

    <!-- Rule 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="16dp">

        <!-- Bishop Move Animation -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bishopmov"
            android:scaleType="fitCenter"
            android:layout_marginEnd="16dp"/>

        <!-- Rule 1 Text -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bishop_1"
            android:textSize="16sp"
            android:textColor="#000000"/>

    </LinearLayout>

    <!-- Rule 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="16dp">

        <!-- Bishop Capture Animation -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bishopattack"
            android:scaleType="fitCenter"
            android:layout_marginEnd="16dp"/>

        <!-- Rule 2 Text -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bishop_2"
            android:textSize="16sp"
            android:textColor="#000000"/>

    </LinearLayout>

    <!-- Rule 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="16dp">

        <!-- Bishop Movement Animation -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bishopblock"
            android:scaleType="fitCenter"
            android:layout_marginEnd="16dp"/>

        <!-- Rule 3 Text -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bishop_3"
            android:textSize="16sp"
            android:textColor="#000000"/>

    </LinearLayout>

    <!-- Rule 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="16dp">

        <!-- Bishop Color Animation -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/twobishops"
            android:scaleType="fitCenter"
            android:layout_marginEnd="16dp"/>

        <!-- Rule 4 Text -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bishop_4"
            android:textSize="16sp"
            android:textColor="#000000"/>

    </LinearLayout>

</LinearLayout>
